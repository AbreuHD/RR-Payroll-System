@using Core.Application.ViewModels.User
@model List<UserGetAllViewModel>
@{
    ViewData["Title"] = "Admin Panel";
}

<div>
    <div id="Cardnfo" style="padding-top: 5%; padding-left: 5%">
        <div class="card mb-5" style="width: 90rem;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">

                        <div class="row m-3">
                            <div class="col-3">
                                <h1>Usuarios</h1>
                            </div>
                            <div class="col-3 offset-6" style="padding-left: 15%">
                                <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action="User">Crear Usuario</a>
                            </div>
                        </div>
                        <hr />

                        <table class="table">
                            <thead>
                                <tr>
                                <tr>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Correo</th>
                                    <th scope="col">Usuario</th>
                                    <th scope="col">Empleado</th>
                                    <th scope="col">Activo</th>
                                    <th scope="col">Editar</th>
                                    <th scope="col">Estatus</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <th scope="row">@user.Id</th>
                                        <td>@user.Name</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>@user.UserName</td>
                                        <td>
                                            @if (user.UserName == "Owner")
                                            {
                                                <div>
                                                    <button type="button" class="btn btn-primary" disabled>OWNER</button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div>
                                                    <a asp-controller="Employee" asp-action="info" asp-route-Id="@user.Id" type="button" class="btn btn-primary">Ver</a>
                                                </div>
                                            }
                                        </td>
                                        <td>@(user.IsActive  ? "Si" : "No")</td>
                                        <td>
                                            @if (user.UserName == "Owner")
                                            {
                                                <button type="button" class="btn btn-primary" disabled>OWNER</button>
                                            }else
                                            {
                                                <button class="btn btn-warning"><a asp-controller="Admin" asp-action="User" asp-route-id="@user.Id">Editar</a></button>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-danger" onclick="cambiarEstatus('@user.Id', '@user.UserName', '@user.IsActive')" data-bs-toggle="modal" data-bs-target="#exampleModal">Cambiar Estatus</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                        <form method="post" asp-controller="Admin" asp-action="Desactivar">
                            <div class="row">
                                <div>
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Usuario</label>
                                        <input type="text" class="form-control" id="username" name="UserName" aria-describedby="username" disabled>
                                    </div>

                                    <input Id="UserId" name="UserId" value="" hidden />
                                    
                                    <div class="mb-3">
                                        <label for="TipoUsuario" id="stringRole" class="form-label">Tipo De Usuario</label>
                                        <select class="form-select" id="TipoUsuario" name="TipoUsuario" aria-label="Default select example">
                                            <option value="1">Owner</option>
                                            <option value="2">Empleado</option>
                                            <option value="3">RRHH</option>
                                            <option value="4">Gerente</option>
                                            <option value="5">Jefe De Obras</option>
                                            <option value="6">Contador</option>
                                            <option value="7">Administrador De Usuarios</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" id="btnStatus"></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalEmpleado" tabindex="-1" aria-labelledby="ModalEmpleado" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="ModalEmpleado">Crear Empleado</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <form method="post" asp-controller="Admin" asp-action="CreateEmpleado">
                                <div class="row row-cols-2">
                                    <div>
                                        <input value="1" name="IdentityId" id="IdentityId" hidden />
                                        <div class="mb-3">
                                            <label for="FechaNacimiento" class="form-label">Fecha Nacimiento</label>
                                            <input type="date" class="form-control" id="FechaNacimiento" name="FechaNacimiento" aria-describedby="username">
                                        </div>
                                        <div class="mb-3">
                                            <label for="Sexo" class="form-label">Genero</label>
                                            <select class="form-select" name="Sexo" aria-label="Default select example">
                                                <option selected>Selecciona un sexo</option>
                                                <option value="0">Femenino</option>
                                                <option value="1">Masculino</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="Celular" class="form-label">Celular</label>
                                            <input type="tel" class="form-control" id="Celular" name="Celular" aria-describedby="username">
                                        </div>

                                        <div class="mb-3">
                                            <label for="IdNacionalidad" class="form-label">Nacionalidad</label>
                                            <select class="form-select" name="IdNacionalidad" aria-label="Default select example">
                                                <option selected>Selecciona tu nacionalidad</option>
                                                @foreach (var i in ViewBag.Nacionalidades)
                                                {
                                                    <option value="@i.Id">@i.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="IdTipoBanco" class="form-label">Banco</label>
                                            <select class="form-select" name="IdTipoBanco" aria-label="Default select example">
                                                <option selected>Selecciona tu tipo de banco</option>
                                                @foreach (var i in ViewBag.TipoBanco)
                                                {
                                                    <option value="@i.Id">@i.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="mb-3">
                                            <label for="Direccion" class="form-label">Direccion</label>
                                            <input type="text" class="form-control" id="Direccion" name="Direccion" aria-describedby="username">
                                        </div>
                                        <div class="mb-3">
                                            <label for="IdProvincia" class="form-label">Provincia</label>
                                            <select class="form-select" name="IdProvincia" aria-label="Default select example">
                                                <option selected>Selecciona tu provincia</option>
                                                @foreach (var i in ViewBag.Provincias)
                                                {
                                                    <option value="@i.Id">@i.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="IdEstado" class="form-label">Estado</label>
                                            <select class="form-select" name="IdEstado" aria-label="Default select example">
                                                <option selected>Selecciona tu estado</option>
                                                @foreach (var i in ViewBag.Estados)
                                                {
                                                    <option value="@i.Id">@i.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="IdTipoCuenta" class="form-label">Tipo De Cuenta</label>
                                            <select class="form-select" name="IdTipoCuenta" aria-label="Default select example">
                                                <option selected>Selecciona tu tipo de cuenta</option>
                                                @foreach (var i in ViewBag.TipoCuenta)
                                                {
                                                    <option value="@i.Id">@i.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="Cuenta" class="form-label">Cuenta</label>
                                            <input type="text" class="form-control" id="Cuenta" name="Cuenta" aria-describedby="username">
                                        </div>
                                    </div>
                                </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Crear</button>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function cambiarEstatus(id, username, isActive) {
        document.getElementById('username').value = username;
        document.getElementById('UserId').value = id;
        
        if (isActive == 'True') {
            var modalEmpleadoElement = document.getElementById('exampleModalLabel');
            modalEmpleadoElement.innerText = 'Estas Seguro de desactivarlo?';
            document.getElementById('stringRole').hidden = true;
            var userTipe = document.getElementById('TipoUsuario');
            userTipe.value = 69;
            userTipe.hidden = true;
            document.getElementById('btnStatus').innerText = 'Desactivar';
        }

        if (isActive == 'False') {
            var modalEmpleadoElement = document.getElementById('exampleModalLabel');
            modalEmpleadoElement.innerText = 'Asignale un Rol';
            document.getElementById('stringRole').hidden = false;
            var userTipe = document.getElementById('TipoUsuario');
            userTipe.hidden = false;
            userTipe.value = 1;
            document.getElementById('btnStatus').innerText = 'Activar';
        }
    }
 </script>

