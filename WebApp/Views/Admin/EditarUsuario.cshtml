@using Core.Application.ViewModels.User
@model UserSaveViewModel
@{
    ViewData["Title"] = "Editar Usuario";
}
<div>
    <form method="post" asp-controller="Admin" asp-action="UserEditar">
        <div class="mb-3">
            <label for="username" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="username" asp-for="UserName" disabled>
        </div>
        <input name="UserName" value="@Model.UserName" hidden />
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>

        <div class="mb-3">
            <label for="lastname" class="form-label">Apellido</label>
            <input type="text" class="form-control" id="lastname" asp-for="LastName">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email">
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">Telefono</label>
            <input type="tel" class="form-control" id="phone" asp-for="Phone">
        </div>
        <div class="mb-3">
            <label for="TipoUsuario" class="form-label">Tipo De Usuario</label>
            <select class="form-select" name="TipoUsuario" aria-label="Default select example">
                <option selected>Selecciona un TipoUsuario</option>
                <option value="1">Owner</option>
                <option value="2">Empleado</option>
                <option value="3">RRHH</option>
                <option value="4">Gerente</option>
                <option value="5">JefeDeObras</option>
                <option value="6">Contador</option>
                <option value="7">AdministradorDeUsuarios</option>
            </select>
        </div>

        <!--
        <div class="mb-3">
            <label for="psw" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="psw" asp-for="Password">
        </div>

        <div class="mb-3">
            <label for="conpsw" class="form-label">Repite la contraseña</label>
            <input type="password" class="form-control" id="conpsw" asp-for="ConfirmPassword">
        </div>
        -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>