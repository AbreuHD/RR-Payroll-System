@using Core.Application.DTOs.Percepciones
@model List<GetAllPercepcionResponseDTO>
@{
    ViewData["Title"] = "Percepciones";
}


<div class="container">
    <div id="Cardnfo" style="padding-top: 5%; padding-left: 3%">
        <div class="card mb-5" style="width: 90rem;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row m-3">
                            <div class="col-3">
                                <h1>Percepcion</h1>
                            </div>
                            <div class="col-3 offset-6" style="padding-left: 12%">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Crear Percepcion</button>
                            </div>
                        </div>

                        <div class="text-center">
                            <div class="row row-cols-2">
                                @foreach (var data in Model)
                                {
                                    <div class="p-3">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h5 class="card-title">@data.Nombre</h5>
                                                <p class="card-text">@data.Descripcion</p>
                                                <p class="card-text">@data.Monto</p>
                                                <p class="card-text">Es default: @data.IsDefault</p>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Crear Percepcion</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="post" asp-controller="ExtraAdmin" asp-action="CreatePercepciones">
                                                    <div class="mb-3">
                                                        <label for="name" class="form-label">Nombre</label>
                                                        <input type="text" class="form-control" id="name" name="Nombre" aria-describedby="name">
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="Descripcion" class="form-label">Descripcion</label>
                                                        <textarea class="form-control" id="Descripcion" name="Descripcion" rows="3"></textarea>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="Monto" class="form-label">Monto</label>
                                                        <input type="number" step="any" class="form-control" id="Monto" name="Monto" aria-describedby="Monto">
                                                    </div>

                                                    <div class="mb-3 form-check">
                                                        <input type="checkbox" class="form-check-input" id="IsDefault" name="IsDefault">
                                                        <label class="form-check-label" for="IsDefault">¿Es Default?</label>
                                                    </div>

                                                    <button type="submit" class="btn btn-primary">Crear</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
