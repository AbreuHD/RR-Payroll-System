@using Core.Application.DTOs.Provincia
@model List<ProvinciaResponseDTO>
@{
    ViewData["Title"] = "Provincias";
}


<div class="container">
    <div id="Cardnfo" style="padding-top: 5%; padding-left: 3%">
        <div class="card mb-5" style="width: 90rem;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row m-3">
                            <div class="col-3">
                                <h1>Provincias</h1>
                            </div>
                            <div class="col-3 offset-6" style="padding-left: 12%">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Crear Provincia</button>
                                </div>
                            </div>

                            <div class="text-center">
                                <div class="row row-cols-2">
                                    @foreach (var data in Model)
                                    {
                                        <div class="p-3">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title">@data.Nombre</h5>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Crear Provincia</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form method="post" asp-controller="ExtraAdmin" asp-action="CreateProvincia">
                                                        <div class="mb-3">
                                                            <label for="name" class="form-label">Nombre</label>
                                                            <input type="text" class="form-control" id="name" name="Nombre" aria-describedby="name">
                                                        </div>
                                                        <button type="submit" class="btn btn-primary">Crear</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>