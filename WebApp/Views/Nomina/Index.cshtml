@using Core.Application.DTOs.Proyecto
@model List<ProyectoDTO>
@{
    ViewData["Title"] = "Nomina";
}


<div class="container">
    <div id="Cardnfo" style="padding-top: 5%; padding-left: 3%">
        <div class="card mb-5" style="width: 90rem;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row m-3">
                            <div class="col-3">
                                <h1>Ver Nomina</h1>
                            </div>
                        </div>

                        <div class="text-center">
                            <div class="row row-cols-2">
                                @foreach (var data in Model)
                                {
                                    <div class="p-3">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h5 class="card-title">@data.Nombre</h5>
                                                <p class="card-text">@data.Descripcion</p>
                                                <a asp-controller="Nomina" asp-action="Nomina" asp-route-ProjectId="@data.Id" class="btn btn-primary">Descargar</a>
                                            </div>
                                            <div class="card-footer text-body-secondary">
                                                @data.Locacion
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>